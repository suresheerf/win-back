extends base

block content 
 .main 
    .navbar 
      nav.navbar
        ul.navbar-nav 
          li.nav-item 
            a.nav-link My Courses 
          li.nav-item 
            a.nav-link Settings 
        if (user.role ==='admin')
          ul.navbar-nav
            li.nav-item 
            a.nav-link Manage Users 
            li.nav-item 
            a.nav-link Manage Courses 
            li.nav-item 
            a.nav-link Manage Billings 
    .container
      form.userDetailsForm
          input.form-control#name(type="text" value = `${user.name}`) 
          br
          input.form-control#email(type="text" value = `${user.email}`)
          br
          img(src = `/img/users/${user.img}` style="height:60px; width:60px; border-radius : 50%;" alt = 'user image')
          input.form-control#userImg(type="file", name="img")
          
          button.btn.btn-primary.updateUserBtn Update Details 
      .row 
        h5 Change Password 
          form.changePasswordForm
            input.form-control.border-box#currentPassword(type="password", name="currentPassword",placeholder = '********')
            br 
            input.form-control#newPassword(type="password", name="newPassword",placeholder = '********') 
            br
            input.form-control#confirmNewPassword(type="password", name="confirmNewPassword",placeholder = '********')
            br
            button.btn.btn-primary Change Password  

            
