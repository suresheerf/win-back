extends base
block content 
   .main
     form.signupForm
        h1.form-name REGISTER
        input.form-control#firstName(name = 'firstname' placeholder = 'First Name' type = 'text') 
        input.form-control#lastName(name = 'Lastname' placeholder = 'Last Name' type = 'text') 
        input.form-control#email(name = 'email' placeholder = 'Email' type = 'email') 
        input.form-control#password(name = 'password' placeholder = 'password' type= 'password') 
        input.form-control#confirmPassword(name = 'confirmPassword' placeholder = 'Confirm Password' type= 'password') 
        button.btn.btn-success Signup